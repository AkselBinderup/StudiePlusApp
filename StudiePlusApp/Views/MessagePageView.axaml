<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
			 x:CompileBindings="False"
			 d:DesignWidth="393" d:DesignHeight="802"
             x:Class="StudiePlusApp.Views.MessagePageView">
	<StackPanel Margin="20" Spacing="10">
		<TextBlock Text="Messages" FontSize="20" FontWeight="Bold" />

		<ListBox ItemsSource="{Binding Messages}" Height="300"/>

		<StackPanel Orientation="Horizontal" Spacing="5">
			<TextBox Width="250" Text="{Binding NewMessage, Mode=TwoWay}" Watermark="Type a message..." />
			<Button Content="Send" Command="{Binding AddMessageCommand}" />
		</StackPanel>
	</StackPanel>
</UserControl>
