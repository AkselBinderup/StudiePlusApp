<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
			 d:DesignWidth="393" 
			 d:DesignHeight="802"
			 x:CompileBindings="False"
             x:Class="StudiePlusApp.Views.AbsenceCausePageView">
	<StackPanel Margin="20">
		<TextBlock Text="Report Absence Cause" FontSize="20" Margin="0 0 0 10"/>

		<ComboBox ItemsSource="{Binding AbsenceTypes}" SelectedItem="{Binding SelectedAbsenceType}" Margin="0 0 0 10"/>

		<TextBox Watermark="Write explanation..." Text="{Binding Description}" AcceptsReturn="True" Height="100" Margin="0 0 0 10"/>

		<Button Content="Submit" Command="{Binding SubmitCommand}" HorizontalAlignment="Left"/>

		<TextBlock Text="{Binding StatusMessage}" Foreground="Green" Margin="0 10 0 0"/>
	</StackPanel>
</UserControl>
