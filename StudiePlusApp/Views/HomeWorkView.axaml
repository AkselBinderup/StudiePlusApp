<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
			 d:DesignWidth="393" 
			 d:DesignHeight="802"
			 x:CompileBindings="False"
             x:Class="StudiePlusApp.HomeWorkView">

	<StackPanel Margin="20" Spacing="10">
		<TextBlock Text="Homework Assignments" FontSize="24" FontWeight="Bold" />

		<ItemsControl ItemsSource="{Binding HomeworkItems}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0 0 0 5">
						<StackPanel>
							<TextBlock Text="{Binding Subject}" FontWeight="Bold" FontSize="16"/>
							<TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
							<TextBlock Text="{Binding DueDate, StringFormat='Due: {0:dddd, MMM d}'}" FontStyle="Italic" Foreground="Gray"/>
						</StackPanel>
					</Border>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</StackPanel>
</UserControl>
