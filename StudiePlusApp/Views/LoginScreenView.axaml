		<StackPanel Margin="20" Spacing="10" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="Login" FontSize="24" HorizontalAlignment="Center" />

			<TextBox Watermark="Username" Text="{Binding Username}" Width="200"/>
			<TextBox Watermark="Password" Text="{Binding Password}" PasswordChar="â€¢" Width="200"/>

			<Button Content="Login" Command="{Binding LoginCommand}" Width="200"/>
		</StackPanel>
	</Grid>
</UserControl>
