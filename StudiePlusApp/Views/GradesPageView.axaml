<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
			 d:DesignWidth="393" 
			 d:DesignHeight="802"
             x:CompileBindings="False"
			 x:Class="StudiePlusApp.Views.GradesPageView">
	<StackPanel Margin="20">
		<TextBlock Text="Your Grades" FontSize="24" FontWeight="Bold" Margin="0 0 0 10"/>

		<ItemsControl ItemsSource="{Binding Grades}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0 0 0 5">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="{Binding Subject}" FontWeight="Bold"/>
							<TextBlock Text=":"/>
							<TextBlock Text="{Binding Grade}"/>
						</StackPanel>
					</Border>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</StackPanel>
</UserControl>
